{
  "name": "{{projectName}}",
  "version": "1.0.0",
  "description": "My Moleculer microservice",
  "scripts": {
    "dev": "moleculer-runner --repl --hot service.js",
    "start": "moleculer-runner service.js"{{#jest}},
    "ci": "jest --watch",
    "test": "jest --coverage"{{/jest}}{{#lint}},
    "lint": "eslint services"{{/lint}}
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    {{#lint}}
    "eslint": "^4.18.2",
    {{/lint}}
    {{#jest}}
    "jest": "^22.4.2",
    "jest-cli": "^22.4.2",
    {{/jest}}
    "moleculer-repl": "^0.4.0"
  },
  "dependencies": {
    {{#if_eq transporter "NATS"}}
    "nats": "^0.8.2",
    {{/if_eq}}
    {{#if_eq transporter "MQTT"}}
    "mqtt": "^2.16.0",
    {{/if_eq}}
    {{#if_eq transporter "AMQP"}}
    "amqplib": "^0.5.2",
    {{/if_eq}}    
    {{#if_eq transporter "STAN"}}
    "node-nats-streaming": "0.0.28",
    {{/if_eq}}    
    {{#if_eq transporter "Kafka"}}
    "kafka-node": "2.4.1",
    {{/if_eq}}    
    {{#redis}}
    "ioredis": "^3.2.2",
    {{/redis}}
    "moleculer": "^0.12.0"
  },
  "engines": {
    "node": ">= 6.x.x"
  }{{#jest}},
  "jest": {
    "coverageDirectory": "../coverage",    
    "testEnvironment": "node",
    "rootDir": "./services",
    "roots": [
      "../test"
    ]
  }{{/jest}}
}
